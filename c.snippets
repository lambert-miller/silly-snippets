* Function: $2 
* Description:      
* Where:
* Return: $1          
* Error:            
*****************************************************************************/

${1:void} ${2:function_name}($3)
{
	${VISUAL}$0
}
endsnippet

snippet ushort "unsigned short"
unsigned short
endsnippet

snippet uint "unsigned int"
unsigned int
endsnippet

snippet vmain "main() (main)" bA
#include "stdio.h"
#include "stdlib.h"


int main()
{
	${VISUAL}$0
	return 0;
}
endsnippet
