priority -50

snippet forii "for int loop (fori)" bA
for (${2:i} = 0; $2 < ${1:count}; ${3:++$2}) {
	${VISUAL}$0
}
endsnippet

snippet forjj "for int loop (forj)" bA
for (${2:j} = 0; $2 < ${1:count}; ${3:++$2}) {
	${VISUAL}$0
}
endsnippet

snippet fcomment "file comment" bA

endsnippet

snippet cfun "function with comment" bA

